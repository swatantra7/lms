.text-center
  %h4
    - if @book.persisted?
      = "Edit Book #{@book.name}"
  .row
    .col-md-9.col-md-offset-1
      = bootstrap_form_for [:librarians, @book],  layout: :horizontal,
          label_col: 'col-md-3', control_col: 'col-md-7' do |f|
        .space-20
          = f.text_field :name, class: "form-control col-md-2", label: 'Book name'
          = f.number_field :quantity, class: "form-control col-md-2" 
        .clearfix
        .form-group
          = link_to 'cancel', librarians_books_path, class: 'btn btn-danger btn-sm'
          &nbsp;
          = f.submit 'Add Book', class: 'btn btn-primary'
